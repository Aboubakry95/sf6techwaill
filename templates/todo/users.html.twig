{% extends 'template.html.twig' %}

{% block title %}Users{% endblock %}
{% block PageTitle %}
    <div style="text-align: center;">Users</div>
{% endblock %}

{% block body %}
    {{ include('fragments/date-jour.html.twig') }}
    <div class="alert alert-warning">
        <a href="{{ path('tab', { nb: 7}) }}">statsnumber</a>
    </div>
    <table class="table">
        <thead class="table-active">
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Age</th>
            <th>Message</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="table-{{ loop.index is odd ? 'danger' : 'warning' }}">
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.age }}</td>
                <td>
                    {{ render(controller('App\\Controller\\FirstController::sayHello', {
                        'firstname': user.firstname,
                        'lastname': user.lastname
                    })) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
