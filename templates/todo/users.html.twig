{% extends 'template.html.twig' %}

    {% block title %} users {% endblock %}
    {% block PageTitle %}<div style="text-align: center;">users</div>{% endblock %}
{% block body %}
<table class="table">
    <thead class="table-active">
    <tr>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Age</th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr class="table-{% if loop.index is odd %}danger{% else  %}warning{% endif %}">
            <td>{{ user.firstname }}</td>
            <td>{{ user.lastname }}</td>
            <td>{{ user.age }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}